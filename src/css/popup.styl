body
  width: 220px
  background: url("https://ssl-ccstatic.highwebmedia.com/images/bg-body.gif")
  background-repeat: repeat-x;
  margin: 0px
  user-select: none
  color: #222
  font-size: 14px

div, h1, h2, h3
  cursor: default
  color: #555

html
  margin: 0px
  padding: 0px

h1
  text-shadow: 0px 0px 4px #58a, 0px 0px 4px #58a, 0px 0px 4px #58a, 0px 0px 4px #58a
  font-size: 26px
  margin: 0px
  padding-top: 3px
  padding-left: 10px
  padding-bottom: 6px
  border-bottom: 4px solid #227799
  color: #eb0

.main
  border-top: 1px solid #b80
  background: #eee

h2
  margin-top: 5px
  font-weight: normal
  font-size: 24px
  margin-bottom: 10px
  color: #888

form > div
  margin-top: 4px

label
  border: 1px solid #eee
  border-radius: 3px
  padding: 2px
  padding-right: 5px

label:hover
  border: 1px solid #ddd
  background: #e9e9e9

div.main > div
  margin-top: 10px
  border-top: 1px solid #ddd

div.main > div, form
  padding: 5px
