@import "functions/button.styl"
@import "functions/hidden.styl"

body
  width: 250px
  margin: 0px
  user-select: none
  color: #222
  font-size: 14px

div.header
  width 250px
  background: url("https://ssl-ccstatic.highwebmedia.com/images/bg-body.gif")
  background-repeat: repeat-x;

div, h1, h2, h3
  cursor: default
  color: #555


html
  margin: 0px
  padding: 0px

h1
  text-shadow: 0px 0px 4px #58a, 0px 0px 4px #58a, 0px 0px 4px #58a, 0px 0px 4px #58a
  font-size: 26px
  margin: 0px
  padding-top: 3px
  padding-left: 10px
  padding-bottom: 6px
  border-bottom: 4px solid #227799
  color: #eb0

.main
  border-top: 1px solid #b80
  background: #eee

h2
  margin-top: 5px
  font-weight: normal
  font-size: 24px
  margin-bottom: 10px
  color: #888

form > div
  margin-top: 4px

label
  border: 1px solid #eee
  border-radius: 3px
  padding: 2px
  padding-right: 5px

label:hover
  border: 1px solid #ddd
  background: #e9e9e9

div.main > div
  margin-top: 10px
  border-top: 1px solid #ddd

div.main > div, form
  padding: 5px

input[type="file"]
  hidden()

label.file
  button(light,#fafafa,13px,"normal",4px,8px)
  display: inline-block

table.steps
  width 100%
  list-style-type: none;
  counter-reset: steps
  border: 0px
  td
    margin-left: 0px
    padding-left: 10px
    vertical-align top
    padding-top 5px
    ul
      margin: 0px
      padding-left: 20px
    h3
      font-weight normal
      font-size 18px
      margin-bottom: 0px
      margin-top: 0px
      color: #999
    h4
      margin: 0px
      margin-top: 5px
    p
      margin-top: 5px
      font-size: 13px
  th
    content: counter(steps)
    counter-increment: steps
    font-weight: normal
    font-size: 40px
    color: #aaa
    vertical-align: top
  tr.contingent
    th
      color #d5d5d5
    td
      color #aaa
      font-size 13px
      h3
        color: #d5d5d5

button
  button(light,#fafafa,13px,"normal",4px,8px)

div.dialog-widget.alert, div.dialog-widget.confirm
  width: auto !important
  left: 5px !important
  right: 5px !important
  margin-left: auto !important
  margin-right: auto !important
  box-sizing: border-box
  background: #eee

  .title, h3
    text-align: left
  button
    button(light,#fafafa,13px,"normal",4px,8px)
    width: auto !important
    display: inline-block
